<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>



    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="stylesheet" type="text/css" href="~/Areas/WorkPage/js/login_scripts/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="../Areas/WorkPage/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Areas/WorkPage/css/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/Areas/WorkPage/js/login_scripts/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Areas/WorkPage/js/login_scripts/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/Areas/WorkPage/js/login_scripts/animsition/css/animsition.min.css">
    <link rel="stylesheet" type="text/css" href="~/Areas/WorkPage/js/login_scripts/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/Areas/WorkPage/js/login_scripts/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" type="text/css" href="~/Areas/WorkPage/css/login_css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Areas/WorkPage/css/login_css/main.css">
</head>
<body>

    @model MaxxExpress.tbl_web_users

    @{
        ViewBag.Title = "Maxx Express Portal Login";

    // Group APIs by controller
    // ILookup<HttpControllerDescriptor, ApiDescription> apiGroups = Model.ToLookup(api => api.ActionDescriptor.ControllerDescriptor);
    }

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-77 p-r-77 p-t-55 p-b-55">

                @using (Html.BeginForm("Login", "Work", FormMethod.Post , new { @class="login100-form validate-form flex-sb flex-w" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)


                    <span class="login100-form-title">
                       <span class="tinymaxxlogo pull-left"></span> 
                        <span class="staff-login-txt">portal login</span>
                    </span>

                    <span class="txt1 p-b-11">
                        Username <span class="cform-username-error">@ViewBag.UsernameError</span>
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                         @Html.TextBoxFor(a => a.UserName, new { @class = "input100" })
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Password <span class="cform-password-error">@ViewBag.PasswordError</span>
                    </span>
                    <div class="wrap-input100 validate-input m-b-12" data-validate="Password is required">
                        <span class="btn-show-pass">
                            <i class="fa fa-eye"></i>
                        </span>
                        @Html.TextBoxFor(a => a.Password, new { @class = "input100", @type="password" })
                        <span class="focus-input100"></span>
                    </div>

                    <div class="flex-sb-m w-full p-b-48">
                       
                    </div>

                    <div class="container-login100-form-btn">
                        <button id="btn-login-submit" type="submit" class="login100-form-btn" value="Login">
                            Login
                        </button>
                    </div>

                }
                
            </div>
        </div>
    </div>


    <div class="modal fade" id="messageLogging_Modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="display: none;">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 id="sending-title" class="modal-title" style="margin:auto;"></h4>
                </div>
                <div class="modal-body" style="min-height:200px">
                    <div class="col-md-12">
                        <div class="col-3"></div>
                        <div class="col-5" style="margin-left:auto; margin-right:auto;">
                            <div id="loggingIn-message"></div>
                            <div id="sending-status" class="text-center"></div>
                        </div>
                        <div class="col-3"></div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-4"></div>
                        <div class="col-4 hide" >
                            <div id="close-sending-modal" class="text-center padding-top-md  hide">
                                <button id="btn-close-sending-modal" type="button" class="btn btn-danger">Close This Window</button>
                            </div>
                        </div>
                        <div class="col-4"></div>
                    </div>

                </div>
                <div class="modal-footer hide">
                    &nbsp;
                </div>
            </div>
        </div>
    </div>


    <script src="~/Areas/WorkPage/js/login_scripts/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/WorkPage/js/login_scripts/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/WorkPage/js/login_scripts/bootstrap/js/popper.js"></script>
    <script src="~/Areas/WorkPage/js/login_scripts/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/WorkPage/js/login_scripts/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/WorkPage/js/login_scripts/daterangepicker/moment.min.js"></script>
    <script src="~/Areas/WorkPage/js/login_scripts/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/WorkPage/js/login_scripts/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/WorkPage/js/login_scripts/main.js"></script>

    <script>

        $('#btn-login-submit').on('click', function () {
            if ( ($('#UserName').val() !== "" || $('#UserName').val() !== null) && ($('#Password').val() !== "" || $('#Password').val() !== null)) {
                $('#sending-title').html('Logging in...');
                $('#messageLogging_Modal').modal('show');
            } else {
              null
            }
        })

    </script>
</body>
</html>