
<div id="right-panel" class="right-panel" style="overflow-x:hidden">
    <div id="main-header" class="breadcrumbs">
        <div class="col-sm-8">
            <a id="menuToggle" class="menutoggle pull-left"><i class="fa fa fa-tasks"></i></a>
            <div class="page-header">
                <span id="maxx-txt-logo" class="maxxtextlogo pull-left hide" style="display:none;"></span>
                <div id="dashboard-title" class="page-title">
                    @if (Session["LogUserFullName"] != null)
                    {
                        <span class="PortalDash-Txt">Portal  </span><span class="Hello-Txt"><span style="color:black">></span>   Hello, @Session["LogUserFullName"].ToString()</span>
                    }
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li id="dateandtime" class="active dtl_number"></li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="content mt-3">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="col-lg-6"><strong class="card-title">My Fuel</strong></div>
                    <div class="col-lg-6">
                        <button type="button" class="btn btn-outline-primary btn-sm add-fuel-btn_driver"><i class="fa fa-plus"></i>&nbsp; Add Fuel Purchase</button>
                        <button type="button" class="btn btn-outline-danger btn-sm  delete-fuel-btn_driver"><i class="fa fa-close"></i>&nbsp;Delete Fuel Purchase</button>
                    </div>
                </div>
                <div class="col-md-12">
                    <div id="add-fuel-success" class="margin-top-md alert alert-success alert-dismissible fade show hide" role="alert">
                        <span class="badge badge-pill badge-success">Fuel Purchase Added</span> You successfully added a new fuel purchase
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
                <div id="fuel-purchase-row" class="card-body">
                    @{Html.RenderAction("GetFuelPurchases");}
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="col-lg-6"><strong class="card-title">Completed Loads</strong></div>
                    <div class="col-lg-6">
                        <button type="button" class="btn btn-outline-primary btn-sm add-load-btn_driver"><i class="fa fa-plus"></i>&nbsp; Add Load</button>
                        @*<button type="button" class="btn btn-outline-success btn-sm edit-load-btn"><i class="fa fa-pencil"></i>&nbsp; Edit Load</button>*@
                        <button type="button" class="btn btn-outline-danger btn-sm  delete-load-btn_driver"><i class="fa fa-close"></i>&nbsp;Delete Load</button>
                    </div>
                </div>
                <div class="col-md-12">
                    <div id="add-load-success" class="alert alert-success alert-dismissible fade show hide" role="alert">
                        <span class="badge badge-pill badge-success">Load Added</span> You successfully added a new load
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div id="delivered-load-success" class="alert  alert-success alert-dismissible fade show hide" role="alert" style="margin-top: 10px;">
                        <span class="badge badge-pill badge-success">Load Delivered</span> You successfully delivered a load
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div id="pickup-load-success" class="alert  alert-success alert-dismissible fade show hide" role="alert" style="margin-top: 10px;">
                        <span class="badge badge-pill badge-success">Load Picked Up</span> You successfully picked up a load
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
                <div id="open-load-row" class="card-body">
                    @{Html.RenderAction("GetOpenLoadSummaryIndex");}
                </div>
            </div>
        </div>

        <div class="col-sm-12">&nbsp;</div>

        <div class="col-xl-6 hide">
            <div class="card">
                <div class="card-header">
                    <h4>World</h4>
                </div>
                <div class="Vector-map-js">
                    <div id="vmap" class="vmap" style="height: 265px;"></div>
                </div>
            </div>
            <!-- /# card -->
        </div>


    </div> <!-- .content -->
</div><!-- /#right-panel -->