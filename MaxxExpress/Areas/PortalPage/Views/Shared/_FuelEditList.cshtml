        </script>

    }
    else
    {

    }
}

<script type="text/javascript">
    //Edit only one purchase at a time
    function editOnlyThisFuelPurchase(id) {
        var myCheckbox = document.getElementsByClassName("ThisFuelPurchase_CL");
        Array.prototype.forEach.call(myCheckbox, function (el) {
            el.checked = false;
        });
        id.checked = true;

        var deleteButton = document.getElementsByClassName("deletethisFuelPurchase_btn");
        Array.prototype.forEach.call(deleteButton, function (el2) {
            el2.disabled = false;
        });

        var paidButton = document.getElementsByClassName("markaspaidthisFuelPurchase_btn");
        Array.prototype.forEach.call(paidButton, function (el3) {
            el3.disabled = false;
        });


    }



</script>
